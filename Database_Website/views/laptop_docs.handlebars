    <h1>Documentation</h1>

    <p>This page is used to add or remove documentation. <br>* Indicates required field.</p>

    <h3>Add Documentation</h3>
    <form id="new_laptop_doc" action="/laptop_docs" method="post">
      <fieldset>
        <label> Title:
          <input type="text" maxlength="100" name="title_input" id="long" required>
        *</label><br>

        <label> Document Web Link:
          <input type="text" maxlength="255" name="link_input" id="long" required>
        *</label><br>

        <label>PC Make:
          <select name="make_input">
              <option hidden disabled disabled selected value> -- select an option -- </option>
              <option value="Dell">Dell</option>
              <option value="HP">HP</option>
          </select>
        </label><br>

        <label>PC Model:
          <input type="text" maxlength="25" name="model_input">
        </label><br>

        <input type="submit" value="Add Documentation">
      </fieldset>
    </form>

    <h3>Search/Remove Documentation</h3>

    <form>
      <fieldset>
        <legend>Search for document</legend>
        <label>Title:
          <input type="text" maxlength="25" name="serial_search">
        </label><br>

        <label>PC Make:
          <select name="make_search">
              <option hidden disabled disabled selected value> -- select an option -- </option>
              <option value="Dell">Dell</option>
              <option value="HP">HP</option>
          </select>
        </label><br>

        <label>PC Model:
          <input type="text" maxlength="25" name="model_search">
        </label>

        <br><input type="submit" value="Search">

      </fieldset>
    </form><br>

    <h3>All Docs</h3>
    <table>
      <thead>
        <th>Make</th>
        <th>Model</th>
        <th>Doc Title</th>
        <th>Doc Link</th>
      </thead>
      <tbody>
        {{#each laptop_docs}}
        <tr>
          <td>{{make}}</td>
          <td>{{model}}</td>
          <td>{{title}}</td>
          <td>{{doc_link}}</td>
          <td><a href="/laptop_docs/{{Id}}">Edit Document</a></td>
		  <td><button onclick="deleteLaptopDoc({{Id}})">Delete</button></td>
        </tr>
        {{/each}}
      </tbody>
    </table>